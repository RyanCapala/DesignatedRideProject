<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainbackground2"
    tools:context="com.example.awesomeness.designatedride.activities.StartLogoActivity">
    
    <!--landscape xhdpi layout-->

    <ImageView
        android:id="@+id/bkg_img_strt_xhdpi"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@mipmap/login_bkg_img_land"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/startPageLogo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@mipmap/drlogin_logo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/bkg_img_strt_xhdpi"
        app:layout_constraintBottom_toBottomOf="@+id/bkg_img_strt_xhdpi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/startPageLogo_linLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/startPageLogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">


        <ImageView
            android:src="@mipmap/drlogin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/startPageLogo_progessbar"
        android:indeterminateDrawable="@drawable/progess_bar_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/startPageLogo_linLayout"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
