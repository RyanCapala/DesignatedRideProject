<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rider_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.awesomeness.designatedride._RiderActivities.RiderActivity">

    <ImageView
        android:id="@+id/rider_bkg"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/maincolorgradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImgView_rider"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile1xm"
        app:civ_border_color="@color/img_ring_bkg"
        app:civ_border_width="5dp"
        app:civ_fill_color="#E4E6E7"
        app:layout_constraintBottom_toTopOf="@+id/rider_bkg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rider_bkg" />

    <LinearLayout
        android:id="@+id/linlayoutriderview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImgView_rider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, "
            android:textColor="@color/colorTextBlack"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/riderActivityUserFirstName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User!"
            android:textSize="28sp"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/viewProfileImgBtn_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/view_profile_btn2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlayoutriderview" />

    <ImageButton
        android:id="@+id/calendarImgBtn_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/appt_btn2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewProfileImgBtn_rider" />

    <ImageButton
        android:id="@+id/requestRideImgBtn_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/request_ride_btn2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarImgBtn_rider" />

    <LinearLayout
        android:id="@+id/rider_activity_addresscontainer_linlay"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rider_bkg">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_house_large" />

        <TextView
            android:id="@+id/riderActivityAddress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:text="@string/home_address_text" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>

