<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rider_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextBlue"
    tools:context="com.example.awesomeness.designatedride._RiderActivities.RiderActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccentWhiteBrown" />

    <View
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImgView_rider"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile1xm"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp"
        app:civ_fill_color="#E4E6E7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linlayoutriderview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImgView_rider">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Welcome back, "
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/riderActivityUserFirstName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="User!"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <ImageButton
        android:id="@+id/viewProfileImgBtn_rider"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/profilebuttondark"
        android:src="@drawable/icon_profile"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/calendarImgBtn_rider"
        app:layout_constraintTop_toTopOf="@id/calendarImgBtn_rider" />

    <TextView
        android:id="@+id/viewProfileTV_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/view_profile"
        android:textColor="@color/input_et2"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/viewProfileImgBtn_rider"
        app:layout_constraintLeft_toRightOf="@+id/viewProfileImgBtn_rider"
        app:layout_constraintTop_toBottomOf="@+id/viewProfileImgBtn_rider" />

    <ImageButton
        android:id="@+id/calendarImgBtn_rider"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profilebuttondark"
        android:src="@drawable/icon_notes_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlayoutriderview" />

    <TextView
        android:id="@+id/appointmentTV_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/appointment"
        android:textColor="@color/input_et2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/calendarImgBtn_rider"
        app:layout_constraintStart_toStartOf="@+id/calendarImgBtn_rider"
        app:layout_constraintTop_toBottomOf="@+id/calendarImgBtn_rider" />

    <ImageButton
        android:id="@+id/requestRideImgBtn_rider"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/profilebuttondark"
        android:src="@drawable/icon_car_white"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/calendarImgBtn_rider"
        app:layout_constraintTop_toTopOf="@id/calendarImgBtn_rider"/>

    <TextView
        android:id="@+id/requestRideTV_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/request_ride"
        android:textColor="@color/input_et2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/requestRideImgBtn_rider"
        app:layout_constraintStart_toStartOf="@+id/requestRideImgBtn_rider"
        app:layout_constraintTop_toBottomOf="@+id/requestRideImgBtn_rider" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appointmentTV_rider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_home"/>
        <TextView
            android:id="@+id/riderActivityAddress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Default Location home address goes here, Las Vegas NV 89119"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
