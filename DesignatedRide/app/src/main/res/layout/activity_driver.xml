<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainbackground"
    android:id="@+id/activity_driver_layout"
    tools:context="com.example.awesomeness.designatedride._DriverActivities.DriverActivity">

    <View
        android:id="@+id/driver_activity_toplayer_view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/maincolorgradient" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/driver_activity_toplayer_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp">

            <LinearLayout
                android:id="@+id/linlayoutdriverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back, "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/riderActivityUserFirstName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User!"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/viewProfileImgBtn_driver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonbordernormal"
                android:src="@drawable/icon_profile"
                app:layout_constraintRight_toLeftOf="@id/pickupRiderImgBtn_driver"
                app:layout_constraintTop_toTopOf="@id/pickupRiderImgBtn_driver" />

            <TextView
                android:id="@+id/viewProfileTV_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/view_profile"
                android:textColor="@color/input_et2"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/viewProfileImgBtn_driver"
                app:layout_constraintLeft_toRightOf="@+id/viewProfileImgBtn_driver"
                app:layout_constraintTop_toBottomOf="@+id/viewProfileImgBtn_driver" />

            <ImageButton
                android:id="@+id/pickupRiderImgBtn_driver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonbordernormal"
                android:src="@drawable/icon_car_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linlayoutdriverview" />

            <TextView
                android:id="@+id/pickupRiderTV_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/pickup_rider"
                android:textColor="@color/input_et2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/pickupRiderImgBtn_driver"
                app:layout_constraintStart_toStartOf="@+id/pickupRiderImgBtn_driver"
                app:layout_constraintTop_toBottomOf="@+id/pickupRiderImgBtn_driver" />

            <ImageButton
                android:id="@+id/settingsImgBtn_driver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/buttonbordernormal"
                android:src="@drawable/settings"
                app:layout_constraintLeft_toRightOf="@id/pickupRiderImgBtn_driver"
                app:layout_constraintTop_toTopOf="@id/pickupRiderImgBtn_driver" />

            <TextView
                android:id="@+id/settingsTV_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/settings"
                android:textColor="@color/input_et2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/settingsImgBtn_driver"
                app:layout_constraintStart_toStartOf="@+id/settingsImgBtn_driver"
                app:layout_constraintTop_toBottomOf="@+id/settingsImgBtn_driver" />


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/settingsTV_driver" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImgView_driver"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile1xm"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp"
        app:civ_fill_color="#E4E6E7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
