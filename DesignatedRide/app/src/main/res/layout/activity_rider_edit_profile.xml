<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="._RiderActivities.RiderEditProfileActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--First Name-->
        <EditText
            android:id="@+id/fname_et_editProf"
            android:inputType="textPersonName"
            android:hint="@string/fname"
            style="@style/editTextNoLine"
            android:layout_marginTop="10dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/separator1_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/fname_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/fname_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/fname_et_editProf" />

        <!--Last Name-->
        <EditText
            android:id="@+id/lname_et_editProf"
            android:inputType="textPersonName"
            style="@style/editTextNoLine"
            android:hint="@string/lname"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator1_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator1_editProf"
            app:layout_constraintStart_toStartOf="@id/separator1_editProf"/>

        <View
            android:id="@+id/separator2_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/lname_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/lname_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/lname_et_editProf" />

        <!--DOB-->
        <TextView
            android:id="@+id/dob_title"
            android:text="@string/dob"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/separator2_editProf"
            app:layout_constraintTop_toBottomOf="@+id/separator2_editProf"/>

        <LinearLayout
            android:id="@+id/dob_linear_layout"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/separator2_editProf"
            app:layout_constraintStart_toStartOf="@id/dob_title"
            app:layout_constraintTop_toBottomOf="@+id/dob_title">

            <Spinner
                android:id="@+id/month_spinner_editProf"
                android:entries="@array/month"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:layout_weight=".6"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/day_spinner_editProf"
                android:entries="@array/day"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/year_spinner_editProf"
                android:entries="@array/year"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:padding="2dp"
                android:layout_weight=".3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--Address Div-->
        <ImageView
            android:id="@+id/default_address_div_editProf"
            android:src="@mipmap/set_default_address_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/dob_linear_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--Address-->
        <EditText
            android:id="@+id/address_st_et_editProf"
            android:inputType="textCapWords"
            style="@style/editTextNoLine"
            android:hint="@string/address_street"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/default_address_div_editProf"
            app:layout_constraintStart_toStartOf="@id/separator2_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator2_editProf"
            />

        <View
            android:id="@+id/separator3_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/address_st_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/address_st_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/address_st_et_editProf" />

        <EditText
            android:id="@+id/address_ctAndState_et_editProf"
            android:inputType="textCapWords"
            style="@style/editTextNoLine"
            android:hint="@string/address_ctAndState"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator3_editProf"
            app:layout_constraintStart_toStartOf="@id/separator3_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator3_editProf"
            />

        <View
            android:id="@+id/separator4_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/address_ctAndState_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/address_ctAndState_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/address_ctAndState_et_editProf" />

        <!--Email-->
        <EditText
            android:id="@+id/email_et_editProf"
            android:inputType="textEmailAddress"
            style="@style/editTextNoLine"
            android:hint="Email Address"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator4_editProf"
            app:layout_constraintStart_toStartOf="@id/separator4_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator4_editProf"
            />

        <View
            android:id="@+id/separator5_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/email_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/email_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/email_et_editProf" />

        <!--Verify Email-->
        <EditText
            android:id="@+id/verify_email_et_editProf"
            android:inputType="textEmailAddress"
            style="@style/editTextNoLine"
            android:hint="Verify Email Address"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator5_editProf"
            app:layout_constraintStart_toStartOf="@id/separator5_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator5_editProf"
            />

        <View
            android:id="@+id/separator6_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/verify_email_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/verify_email_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/verify_email_et_editProf" />

        <!--Phone-->
        <EditText
            android:id="@+id/phone_et_editProf"
            android:inputType="textPhonetic"
            style="@style/editTextNoLine"
            android:hint="Phone"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator6_editProf"
            app:layout_constraintStart_toStartOf="@id/separator6_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator6_editProf"
            />

        <View
            android:id="@+id/separator7_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/phone_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/phone_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/phone_et_editProf" />

        <!--Medical Info Div-->
        <ImageView
            android:id="@+id/med_info_div_editProf"
            android:src="@mipmap/medical_info_div_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/separator7_editProf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--Insurance-->
        <EditText
            android:id="@+id/insurance_et_editProf"
            android:inputType="textCapWords"
            style="@style/editTextNoLine"
            android:hint="Insurance"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/med_info_div_editProf"
            app:layout_constraintStart_toStartOf="@id/separator6_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator6_editProf"
            />

        <View
            android:id="@+id/separator8_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/insurance_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/insurance_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/insurance_et_editProf" />

        <!--Doctor-->
        <EditText
            android:id="@+id/doctor_et_editProf"
            android:inputType="textCapWords"
            style="@style/editTextNoLine"
            android:hint="Doctor's Name"
            android:layout_marginTop="5dp"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/separator8_editProf"
            app:layout_constraintStart_toStartOf="@id/separator8_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator8_editProf"
            />

        <View
            android:id="@+id/separator9_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/doctor_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/doctor_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/doctor_et_editProf" />

        <!--Public Info Div-->
        <ImageView
            android:id="@+id/public_prof_div_editProf"
            android:src="@mipmap/public_prov_div_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/separator9_editProf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--User Name-->
        <EditText
            android:id="@+id/username_et_editProf"
            android:inputType="text"
            style="@style/editTextNoLine"
            android:hint="Username"
            android:background="@color/colorMainbackground"
            android:cursorVisible="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/teal"
            android:textColorHint="@color/teal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/public_prof_div_editProf"
            app:layout_constraintStart_toStartOf="@id/separator8_editProf"
            app:layout_constraintEnd_toEndOf="@id/separator8_editProf"
            />

        <View
            android:id="@+id/separator10_editProf"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorAccentDark"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/username_et_editProf"
            app:layout_constraintRight_toRightOf="@+id/username_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/username_et_editProf" />

        <!--Wheelchair-->
        <TextView
            android:id="@+id/wheelchair_title_tv_editProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccentDark"
            android:textSize="14sp"
            android:text="Wheelchair Access"
            app:layout_constraintStart_toStartOf="@+id/username_et_editProf"
            app:layout_constraintTop_toBottomOf="@+id/username_et_editProf" />

        <RadioGroup
            android:id="@+id/wheelchair_radiogroup_editProf"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/wheelchair_title_tv_editProf"
            app:layout_constraintTop_toTopOf="@+id/wheelchair_title_tv_editProf"
            app:layout_constraintBottom_toBottomOf="@+id/wheelchair_title_tv_editProf">

            <RadioButton
                android:id="@+id/no_radioBtn_editProf"
                android:text="No"
                android:layout_marginLeft="20dp"
                android:textColor="@color/teal"
                android:textSize="12sp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/yes_radioBtn_editProf"
                android:text="Yes"
                android:textColor="@color/teal"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <!--Save Btn-->
        <ImageButton
            android:id="@+id/save_btn_editProf"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/save_button"
            app:layout_constraintStart_toStartOf="@+id/wheelchair_title_tv_editProf"
            app:layout_constraintTop_toBottomOf="@+id/wheelchair_title_tv_editProf" />

        <!--Cancel Btn-->
        <ImageButton
            android:id="@+id/cancel_btn_editProf"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/cancel_btn_colored"
            app:layout_constraintBottom_toBottomOf="@+id/save_btn_editProf"
            app:layout_constraintStart_toEndOf="@+id/save_btn_editProf"
            app:layout_constraintTop_toTopOf="@+id/save_btn_editProf" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>