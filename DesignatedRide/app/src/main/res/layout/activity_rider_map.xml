<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.awesomeness.designatedride._RiderActivities.RiderMapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <EditText
          android:id="@+id/pickUp"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_above="@+id/destination"
          android:layout_alignStart="@+id/destination"
          android:layout_marginBottom="15dp"
          android:background="@color/colorAccentWhiteBrown"
          android:ems="10"
          android:hint="@string/rider_map_pickup_hint"
          android:inputType="textPostalAddress"
          android:textColorHint="@color/colorTextBlue" />

      <EditText
          android:id="@+id/destination"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_above="@+id/time"
          android:layout_alignStart="@+id/time"
          android:layout_marginBottom="12dp"
          android:background="@color/colorAccentWhiteBrown"
          android:ems="10"
          android:hint="@string/rider_map_destination_hint"
          android:inputType="textPostalAddress"
          android:textColorHint="@color/colorTextBlue" />

      <EditText
          android:id="@+id/time"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_above="@+id/setPickupBtn_ridermap"
          android:layout_alignStart="@+id/setPickupBtn_ridermap"
          android:layout_marginBottom="25dp"
          android:background="@color/colorAccentWhiteBrown"
          android:ems="10"
          android:hint="@string/rider_map_time_hint"
          android:inputType="time"
          android:textColorHint="@color/colorTextBlue" />

      <Button
          android:id="@+id/setPickupBtn_ridermap"
          android:layout_width="300dp"
          android:layout_height="40dp"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="14dp"
          android:text="@string/rider_map_request_button"
          android:textColor="@color/colorTextWhite" />

  </RelativeLayout>




</FrameLayout>
