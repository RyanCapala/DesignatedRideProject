<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.awesomeness.designatedride._DriverActivities.DriverActivity">

    <ImageView
        android:id="@+id/driverAct_bkg"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/maincolorgradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/driverAct_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile1xm"
        app:civ_border_color="@color/img_ring_bkg"
        app:civ_border_width="5dp"
        app:civ_fill_color="#E4E6E7"
        app:layout_constraintBottom_toTopOf="@+id/driverAct_bkg"
        app:layout_constraintTop_toTopOf="@+id/driverAct_bkg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/driverAct_linlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, "
            android:textColor="@color/colorTextBlack"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/driverAct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User!"
            android:textSize="28sp"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/driverAct_view_prof_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/view_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_linlay" />

    <ImageButton
        android:id="@+id/driverAct_availability_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/avilability_btn_with_img"
        app:layout_constraintEnd_toEndOf="@+id/driverAct_view_prof_btn"
        app:layout_constraintStart_toStartOf="@+id/driverAct_view_prof_btn"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_view_prof_btn" />

    <ImageButton
        android:id="@+id/driverAct_schedule_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ride_sched_btn_with_img"
        app:layout_constraintEnd_toEndOf="@+id/driverAct_availability_btn"
        app:layout_constraintStart_toStartOf="@+id/driverAct_availability_btn"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_availability_btn" />

    <ImageButton
        android:id="@+id/driverAct_view_map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/view_map_btn_with_img"
        app:layout_constraintEnd_toEndOf="@+id/driverAct_schedule_btn"
        app:layout_constraintStart_toStartOf="@+id/driverAct_schedule_btn"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_schedule_btn" />

    <ImageButton
        android:id="@+id/driverAct_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/logout_btn_with_img"
        app:layout_constraintEnd_toEndOf="@+id/driverAct_view_map_btn"
        app:layout_constraintStart_toStartOf="@+id/driverAct_view_map_btn"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_view_map_btn" />

    <ImageButton
        android:id="@+id/driverAct_available_btn"
        android:background="@mipmap/available_btn_with_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/driverAct_bkg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>


